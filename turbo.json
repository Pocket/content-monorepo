{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "**/.env.*local", "packages/tsconfig/**"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "test-integrations": {
      "dependsOn": ["^build"]
    },
    "synth": {
      "dependsOn": ["^build"],
      "outputs": ["cdktf.out/**"]
    },
    "lint": {},
    "format": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:dynamo-seed": {
      "cache": false
    },
    "db:prisma-seed": {
      "cache": false
    },
    "db:generate-prisma-client": {
      "cache": false
    },
    "migrate:prisma-reset": {
      "cache": false
    }
  }
}
