{
  "extends": "tsconfig/lambda.json",
  "compilerOptions": {
    "sourceRoot": "/",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src",
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/testHelpers.ts",
    "**/*.integration.ts",
    "jest.config.js",
    "jest.setup.js"
  ],
  "include": [
    "src/**/*.ts",
  ]
}
